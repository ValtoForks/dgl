string readText(InputStream istrm)
{
    ubyte[] arr = New!(ubyte[])(cast(size_t)istrm.size);
    istrm.fillArray(arr);
    istrm.setPosition(0);
    return cast(string)arr;
}

T readStruct(T)(InputStream istrm) if (is(T == struct))
{
    T res;
    istrm.readBytes(res.ptr, T.sizeof);
    return res;
}

